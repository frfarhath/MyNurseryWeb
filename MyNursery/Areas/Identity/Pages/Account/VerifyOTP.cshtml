@page "{userId}"
@model MyNursery.Views.Identity.Pages.Account.VerifyOTPModel
@{
    ViewData["Title"] = "Verify OTP";
    Layout = "/Areas/Identity/Pages/Shared/_Layout.cshtml";
}

<div class="min-h-screen flex items-center justify-center bg-gray-50 px-4 sm:px-6 lg:px-8">
    <div class="max-w-md w-full space-y-6 bg-white p-8 rounded-lg shadow-md">
        <h2 class="text-center text-3xl font-extrabold text-[#004d40] font-brand">Email Verification</h2>

        @if (!string.IsNullOrEmpty(Model.ErrorMessage))
        {
            <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative text-center text-sm">
                @Model.ErrorMessage
            </div>
        }

        <form method="post" class="space-y-6">
            <input type="hidden" asp-for="UserId" />

            <div>
                <label asp-for="OTP" class="block text-[#004d40] font-medium mb-1">Enter OTP</label>
                <input asp-for="OTP" placeholder="Enter the 6-digit OTP"
                       class="w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-[#004d40] focus:border-[#004d40] sm:text-sm" />
                <span asp-validation-for="OTP" class="text-red-600 text-sm mt-1 block"></span>
            </div>

            <button type="submit"
                    class="w-full flex justify-center py-2 px-4 border border-transparent text-sm font-medium rounded-md text-white bg-[#004d40] hover:bg-[#00382e] focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-[#004d40]">
                Verify
            </button>
        </form>
    </div>
</div>
