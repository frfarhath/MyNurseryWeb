@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@using Microsoft.AspNetCore.Identity
@using System.Security.Claims
@using MyNursery.Areas.Welcome.Models;
@inject UserManager<ApplicationUser> UserManager
@inject SignInManager<ApplicationUser> SignInManager

@{
    string firstName = "Guest";

    if (SignInManager.IsSignedIn(User))
    {
        var user = await UserManager.GetUserAsync(User);
        firstName = user?.FirstName ?? "User";
    }
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <title>@ViewData["Title"] - MyNursery</title>
    <link rel="stylesheet" href="~/assets/css/style.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/assets/fonts/feather.css" asp-append-version="true" />

</head>
<body>
    <!-- [ Pre-loader ] start -->
    <div class="loader-bg">
        <div class="loader-track">
            <div class="loader-fill"></div>
        </div>
    </div>
    <!-- [ Pre-loader ] end -->
    <!-- [ navigation menu ] start -->
    <nav class="pcoded-navbar menupos-fixed">
        <div class="navbar-wrapper">
            <div class="navbar-content scroll-div">
                <div class="main-menu-header">
                    <img class="img-radius" src="~/assets/images/user/avatar-2.jpg" asp-append-version="true" alt="User-Profile-Image">
                    <div class="user-details">
                        <span class="mb-0 font-weight-bold">John Doe</span>
                        <div id="more-details"><small>ADMIN<i class="fa fa-chevron-down m-l-5"></i></small></div>
                    </div>
                </div>
                <ul class="nav pcoded-inner-navbar">
                    <li class="nav-item pcoded-menu-caption">
                        <label>Admin Panel</label>
                    </li>

                    <!-- Blogs -->
                    <li class="nav-item pcoded-hasmenu">
                        <a href="javascript:void(0)" class="nav-link">
                            <span class="pcoded-micon"><i class="feather icon-edit"></i></span>
                            <span class="pcoded-mtext">Blogs</span>
                        </a>
                        <ul class="pcoded-submenu">
                            <li><a asp-area="NUAD" asp-controller="Blogs" asp-action="ManageBlogs">Manage Blogs</a></li>
                            <li><a asp-area="NUAD" asp-controller="Blogs" asp-action="PublishedBlogs">Published Blogs</a></li>
                            <li><a asp-area="NUAD" asp-controller="Blogs" asp-action="DeletedBlogs">Deleted Blogs</a></li>

                        </ul>
                    </li>

                    <!-- Contact -->
                    <li class="nav-item pcoded-hasmenu">
                        <a href="javascript:void(0)" class="nav-link">
                            <span class="pcoded-micon">
                                <i class="feather icon-mail"></i>
                            </span>
                            <span class="pcoded-mtext">Contact</span>
                        </a>
                        <ul class="pcoded-submenu">
                            <li><a asp-area="NUAD" asp-controller="Contact" asp-action="ViewMessages">View Messages</a></li>
                        </ul>
                    </li>

                    <!-- Users -->
                    <li class="nav-item pcoded-hasmenu">
                        <a href="javascript:void(0)" class="nav-link">
                            <span class="pcoded-micon"><i class="feather icon-users"></i></span>
                            <span class="pcoded-mtext">Users</span>
                        </a>
                        <ul class="pcoded-submenu">
                            <li><a asp-area="NUAD" asp-controller="Users" asp-action="ManageUsers">Manage</a></li>
                            <li><a asp-area="NUAD" asp-controller="Users" asp-action="CreateUser">Create</a></li>
                        </ul>
                    </li>

                    <!-- Pages -->
                    <li class="nav-item pcoded-hasmenu">
                        <a href="javascript:void(0)" class="nav-link">
                            <span class="pcoded-micon"><i class="feather icon-file-text"></i></span>
                            <span class="pcoded-mtext">Pages</span>
                        </a>
                        <ul class="pcoded-submenu">
                            <li><a asp-area="NUAD" asp-controller="Page" asp-action="Manage">Manage Page</a></li>
                            <li><a asp-area="NUAD" asp-controller="Page" asp-action="Create">Create Page</a></li>
                        </ul>
                    </li>

                    <!-- Curriculum -->
                    <li class="nav-item pcoded-hasmenu">
                        <a href="javascript:void(0)" class="nav-link">
                            <span class="pcoded-micon"><i class="feather icon-book"></i></span>
                            <span class="pcoded-mtext">Curriculum</span>
                        </a>
                        <ul class="pcoded-submenu">
                            <li><a asp-area="NUAD" asp-controller="Curriculum" asp-action="Manage">Manage Curriculum</a></li>
                            <li><a asp-area="NUAD" asp-controller="Curriculum" asp-action="Create">Add Item</a></li>
                        </ul>
                    </li>

                    <!-- Policies -->
                    <li class="nav-item pcoded-hasmenu">
                        <a href="javascript:void(0)" class="nav-link">
                            <span class="pcoded-micon"><i class="feather icon-shield"></i></span>
                            <span class="pcoded-mtext">Policies</span>
                        </a>
                        <ul class="pcoded-submenu">
                            <li><a asp-area="NUAD" asp-controller="Policy" asp-action="Manage">Manage Policies</a></li>
                            <li><a asp-area="NUAD" asp-controller="Policy" asp-action="Create">New Policy</a></li>
                        </ul>
                    </li>

                    <!-- FAQs -->
                    <li class="nav-item pcoded-hasmenu">
                        <a href="javascript:void(0)" class="nav-link">
                            <span class="pcoded-micon"><i class="feather icon-help-circle"></i></span>
                            <span class="pcoded-mtext">FAQs</span>
                        </a>
                        <ul class="pcoded-submenu">
                            <li><a asp-area="NUAD" asp-controller="FAQ" asp-action="Manage">Manage FAQs</a></li>
                            <li><a asp-area="NUAD" asp-controller="FAQ" asp-action="Create">Add FAQ</a></li>
                        </ul>
                    </li>

                    <!-- Vacancies -->
                    <li class="nav-item pcoded-hasmenu">
                        <a href="javascript:void(0)" class="nav-link">
                            <span class="pcoded-micon"><i class="feather icon-briefcase"></i></span>
                            <span class="pcoded-mtext">Vacancies</span>
                        </a>
                        <ul class="pcoded-submenu">
                            <li><a asp-area="NUAD" asp-controller="Vacancy" asp-action="Manage">Manage Vacancies</a></li>
                            <li><a asp-area="NUAD" asp-controller="Vacancy" asp-action="Create">Post Vacancy</a></li>
                        </ul>
                    </li>

                    <!-- Events-->
                    <li class="nav-item pcoded-hasmenu">
                        <a href="javascript:void(0)" class="nav-link">
                            <span class="pcoded-micon"><i class="feather icon-briefcase"></i></span>
                            <span class="pcoded-mtext">Events</span>
                        </a>
                        <ul class="pcoded-submenu">
                            <li><a asp-area="NUAD" asp-controller="Event" asp-action="Manage">Manage Events</a></li>
                            <li><a asp-area="NUAD" asp-controller="Event" asp-action="Create">Add Event</a></li>
                        </ul>
                    </li>

                </ul>
            </div>
        </div>
    </nav>
    <!-- [ navigation menu ] end -->
    <!-- [ Header ] start -->
    <header class="navbar pcoded-header navbar-expand-lg navbar-light headerpos-fixed">
        <div class="m-header">
            <a class="mobile-menu" id="mobile-collapse" href="#"><span></span></a>
            <a href="#" class="b-brand">
                <img src="~/assets/images/logo.png" alt="Logo" class="logo" asp-append-version="true">
            </a>
            <a href="#" class="mob-toggler"><i class="feather icon-more-vertical"></i></a>
        </div>

        <div class="collapse navbar-collapse">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item">
                    <a href="#" class="pop-search"><i class="feather icon-search"></i></a>
                    <div class="search-bar">
                        <input type="text" class="form-control border-0 shadow-none" placeholder="search here">
                        <button type="button" class="close"><span>&times;</span></button>
                    </div>
                </li>
            </ul>

            <ul class="navbar-nav ml-auto">
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" href="#" id="profileDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        <i class="feather icon-user"></i> @firstName
                    </a>
                    <div class="dropdown-menu dropdown-menu-right profile-notification" aria-labelledby="profileDropdown">
                        <div class="pro-head px-3 py-2 d-flex align-items-center">
                            <img src="/assets/images/user/avatar-1.jpg" class="img-radius mr-2" alt="User-Profile-Image" style="width:40px; height:40px;" />
                            <span>@firstName</span>
                            <form id="logoutForm" method="post" asp-area="Identity" asp-page="/Account/Logout" class="px-3">
                                <button type="submit" class="btn btn-link dropdown-item p-0 m-0" style="color:inherit; text-align:left;">
                                    <i class="feather icon-power"></i>
                                </button>
                            </form>
                        </div>
                        <div class="dropdown-divider"></div>
                        <a class="dropdown-item" asp-area="NUAD" asp-controller="Account" asp-action="Profile">
                            <i class="feather icon-user"></i> Profile
                        </a>
                    
                    </div>
                </li>
            </ul>
        </div>
    </header>
    <!-- [ Header ] end -->
    <!-- Main Container -->
    <div class="pcoded-main-container">
        <div class="pcoded-content">
            @await Html.PartialAsync("_Notification")
            @RenderBody()
        </div>
    </div>

    <!-- Scripts -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.min.js"></script>

    <script src="~/assets/js/vendor-all.min.js" asp-append-version="true"></script>
    <script src="~/assets/js/plugins/bootstrap.min.js" asp-append-version="true"></script>
    <script src="~/assets/js/pcoded.min.js" asp-append-version="true"></script>
    <script src="~/assets/js/menu-setting.min.js" asp-append-version="true"></script>
    <script src="https://unpkg.com/feather-icons"></script>
    <script>
        feather.replace()
    </script>
    <script>
        $(document).ready(function () {
            $('.dropdown-toggle').dropdown();
        });
    </script>

    <script>
        setInterval(() => {
            fetch(window.location.origin + '/NUAD/Home/Index', { method: 'HEAD', credentials: 'include' })
                .then(response => {
                    if (response.status === 401 || response.redirected) {
                        console.log('Session expired or unauthorized. Redirecting to login.');
                        window.location.href = '/Identity/Account/Login';
                    }
                })
                .catch(err => {
                    console.error('Session check failed:', err);
                });
        }, 30000);
    </script>


    @RenderSection("Scripts", required: false)
</body>
</html>
